%h1= "Nome: #{ @user.name }"
%h1= "Traduções: #{ @translations }"
%h1= "Rejeitadas: #{ @rejected }"
%h1= "Aprovadas: #{ @accepted }"

%h1 Por período:
= form_tag stats_user_path, method: :get do
  = label_tag 'De'
  = text_field_tag 'date_from', '', required: true
  = label_tag 'Até'
  = text_field_tag 'date_to', '', required: true
  %br
  = submit_tag 'Enviar', class: 'button'

- if @translations_per_date
  %h1= "#{ @translations_per_date } traduções de #{ @date_from.strftime '%d/%m/%y' } até #{ @date_to.strftime '%d/%m/%y' }"

= javascript_tag 'new Stat()'