#games
  - @games.each do |game|
    = fields_for 'game[]', game do |game_fields|
      %fieldset
        %dl
          %dt= 'Português'

          %dt= game_fields.label :name
          %dd= game_fields.text_field :name, size: 50, disabled: true

          %dt= game_fields.label :short_description
          %dd= game_fields.text_field :short_description, size: 40, disabled: true

          %dt= game_fields.label :long_description
          %dd= game_fields.text_area :long_description, rows: 8, cols: 70, disabled: true

          - if game.wide_description.present?
            %dt= game_fields.label :wide_description
            %dd= game_fields.text_field :wide_description, size: 70, disabled: true

          %dt= game_fields.label :instructions
          %dd= game_fields.text_area :instructions, rows: 6, cols: 70, disabled: true

        %dl
          %dt= 'Traduzir'

          = game_fields.hidden_field :user_id, value: current_user.id
          %dt= game_fields.label :name_en
          %dd= game_fields.text_field :name_en, size: 50

          %dt= game_fields.label :short_description_en
          %dd= game_fields.text_field :short_description_en, size: 40

          %dt= game_fields.label :long_description_en
          %dd= game_fields.text_area :long_description_en, rows: 8, cols: 70

          - if game.wide_description.present?
            %dt= game_fields.label :wide_description_en
            %dd= game_fields.text_field :wide_description_en, size: 70

          %dt= game_fields.label :instructions_en
          %dd= game_fields.text_area :instructions_en, rows: 6, cols: 70

  = submit_tag 'enviar tradução', class: 'button'