%dt= label_tag :locale
%dd= select_tag(:locale, options_for_select(I18n.available_locales, I18n.locale))

- @games.each do |game|
  = fields_for 'game[]', game do |game_fields|
    %fieldset
      %dl
        %dt= game_fields.label :name
        %dd= game_fields.text_field :name, autofocus: true

        %dt= game_fields.label :short_description
        %dd= game_fields.text_field :short_description

        %dt= game_fields.label :long_description
        %dd= game_fields.text_area :long_description, rows: 2

        - if game.wide_description.present?
          %dt= game_fields.label :wide_description
          %dd= game_fields.text_area :wide_description, rows: 2

        %dt= game_fields.label :instructions
        %dd= game_fields.text_area :instructions, rows: 3

= submit_tag 'enviar tradução'