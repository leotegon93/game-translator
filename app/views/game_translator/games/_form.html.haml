#games
  - @games.each do |game|
    = fields_for 'game[]', game do |game_fields|
      %fieldset
        %dl
          %p= 'PortuguÃªs'

          %dt= game_fields.label :name
          %dd= game_fields.text_field :name, disabled: true

          %dt= game_fields.label :short_description
          %dd= game_fields.text_field :short_description, disabled: true

          %dt= game_fields.label :long_description
          %dd= game_fields.text_area :long_description, disabled: true

          - if game.wide_description.present?
            %dt= game_fields.label :wide_description
            %dd= game_fields.text_area :wide_description, disabled: true

          %dt= game_fields.label :instructions
          %dd= game_fields.text_area :instructions, disabled: true

          = hidden_field_tag :user_id, current_user.id
          
        - @languages.each do |language|
          %dl
            %p= "Traduzir para #{ language }"
            
            %dt= game_fields.label "name_#{ language }".to_sym
            %dd= game_fields.text_field "name_#{ language }".to_sym

            %dt= game_fields.label "short_description_#{ language }".to_sym
            %dd= game_fields.text_field "short_description_#{ language }".to_sym

            %dt= game_fields.label "long_description_#{ language }".to_sym
            %dd= game_fields.text_area "long_description_#{ language }".to_sym

            - if game.wide_description.present?
              %dt= game_fields.label "wide_description_#{ language }".to_sym
              %dd= game_fields.text_area "wide_description_#{ language }".to_sym

            %dt= game_fields.label "instructions_#{ language }".to_sym
            %dd= game_fields.text_area "instructions_#{ language }".to_sym

  = submit_tag 'Traduzir!', class: 'button'